<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="235dp"
        app:zxing_framing_rect_width="235dp" />

    <systems.v.wallet.ui.widget.ScannerViewFinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scannerBoundColor="@color/white_6"
        app:scannerBoundCornerColor="@color/color_orange_strong"
        app:scannerBoundCornerHeight="12dp"
        app:scannerBoundCornerWidth="4dp"
        app:scannerBoundWidth="2dp"
        app:scannerLaserResId="@drawable/scanner_laser"
        app:scannerTipText="@string/scan_tip"
        app:scannerTipTextColor="@color/white"
        app:scannerTipTextMargin="15dp"
        app:scannerTipTextSize="14sp"
        app:tipTextGravityBottom="false"
        app:zxing_possible_result_points="@color/zxing_custom_possible_result_points"
        app:zxing_result_view="@color/zxing_custom_result_view"
        app:zxing_viewfinder_laser="@color/zxing_custom_viewfinder_laser"
        app:zxing_viewfinder_mask="@color/black_5" />
</merge>
